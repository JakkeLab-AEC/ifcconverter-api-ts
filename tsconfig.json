{
  "compilerOptions": {
    "outDir": "./dist",              
    "declaration": true,             
    "declarationMap": true,          
    "target": "ES2020",              
    "module": "CommonJS",            
    "strict": true,                 
    "esModuleInterop": true,         
    "skipLibCheck": true,            
    "resolveJsonModule": true,       
    "sourceMap": true,               
    "baseUrl": "./",                 
    "paths": {
      "*": ["src/*"]                 
    }
  },
  "include": ["src/**/*"],           
  "exclude": ["node_modules", "dist"] 
}